<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vishukumar.howareyoudoingtoday.DescribeMoodPage"
    android:layout_margin="16dp"
    android:elevation="6dp"
    android:background="@drawable/alert_dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/consoleMessageId"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:maxLines="6"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_weight="2">

                <Button
                    android:id="@+id/quitAppButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/quit_app"
                    android:onClick="quitOrResultsButtonClicked"
                    android:layout_weight="1"
                    android:background="@drawable/orange_button"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/showResultButtonId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/show_result"
                    android:onClick="quitOrResultsButtonClicked"
                    android:layout_weight="1"
                    android:background="@drawable/orange_button"
                    android:textColor="#FFFFFF"
                    />






            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>
