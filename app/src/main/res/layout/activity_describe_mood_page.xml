<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vishukumar.howareyoudoingtoday.DescribeMoodPage"
    android:layout_margin="16dp"
    android:elevation="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/singleMoodId"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/moodTitleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:ellipsize="end"
            android:layout_marginTop="16dp"
            android:text="This is test heading"
            android:textAlignment="center"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/moodDescriptionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:text="This is test footer"
            android:textAlignment="center"
            android:maxLines="10"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
