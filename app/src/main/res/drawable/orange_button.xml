<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <gradient
                android:angle="180"
                android:startColor="#fe8c00"
                android:endColor="#f83600"
                android:type="linear"
                />
            <size
                android:width="160dp"
                android:height="40dp"
                />
            <stroke
                android:width="1dp"
                android:color="#ADADAD"
                />
        </shape>

    </item>

    <item
        android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <gradient
                android:angle="180"
                android:startColor="#abbaab"
                android:endColor="#ffffff"
                android:type="linear"
                />
            <size
                android:width="160dp"
                android:height="40dp"
                />
            <stroke
                android:width="1dp"
                android:color="#f33006"
                />
        </shape>
    </item>
</selector>